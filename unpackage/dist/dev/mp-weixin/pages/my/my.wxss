.my {
  height: 100vh;
  background-color: #f1f2f3;
}
.my .my-info {
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.my .my-info .my-info-avator {
  width: 150rpx;
  height: 150rpx;
  background-color: #f1f2f3;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}
.my .my-info .my-info-avator .avator {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.my .my-info .my-info-content {
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 150rpx;
}
.my .my-info .my-info-content .my-info-content_name {
  font-size: 40rpx;
  font-weight: 700;
}
.my .my-info .my-info-content .my-info-content_email {
  color: #bcbcbc;
  font-size: 28rpx;
}
.my .my-cell {
  background-color: #fff;
  margin: 10rpx 0;
}
.my .logout {
  margin: 40rpx;
  background-color: #ff3333;
  color: #fff;
  font-size: 28rpx;
}

