.page-goods {
  position: fixed;
  left: 0;
  top: 80rpx;
  right: 0;
  bottom: 0;
  background-color: #f3f3f3;
}
.page-goods .search {
  height: 100rpx;
  background-color: #fff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.page-goods .search .u-input {
  background-color: #e6e6e6;
}
.page-goods .goods-content {
  display: flex;
  height: calc(100% - 50px);
}
.page-goods .goods-content .goods-labels_list {
  overflow: auto;
  background-color: #fff;
}
.page-goods .goods-content .goods-labels_list .goods-labels_item {
  position: relative;
  background-color: #f3f3f3;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  font-size: 28rpx;
}
.page-goods .goods-content .goods-labels_list .goods-labels_item.active {
  background-color: #fff;
  font-weight: 700;
}
.page-goods .goods-content .goods-labels_list .goods-labels_item.active::before {
  content: '';
  position: absolute;
  left: 0;
  width: 6rpx;
  background-color: #476bb8;
  height: 30rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.page-goods .goods-content .goods-commodity_list {
  flex: 1;
  margin-bottom: 50px;
  border-radius: 10rpx;
  margin: 10rpx;
  background-color: #fff;
  overflow: auto;
}

